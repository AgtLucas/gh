{
    "default_branch": "master",

    "default_remote": "origin",

    "github_token": "",

    "github_user": "",

    "hooks": {
        "issue": {
            "close": {
                "before": [],
                "after": []
            },
            "new": {
                "before": [],
                "after": [
                    "gh is --browser --user {{options.user}} --repo {{options.repo}} --number {{options.number}}"
                ]
            },
            "open": {
                "before": [],
                "after": []
            }
        },
        "pull-request": {
            "close": {
                "before": [],
                "after": []
            },
            "fetch": {
                "before": [],
                "after": [
                    "gh pr {{options.number}} --comment 'Just started reviewing :) {{{signature}}}'"
                ]
            },
            "fwd": {
                "before": [],
                "after": [
                    "gh pr {{options.number}} --comment 'Pull request forwarded to @{{options.fwd}}. [Check it here.]({{forwardedLink}}) {{{signature}}}'"
                ]
            },
            "merge": {
                "before": [],
                "after": [
                    "gh pr {{options.number}} --comment 'Thank you, pull request merged :D {{{signature}}}'"
                ]
            },
            "open": {
                "before": [],
                "after": []
            },
            "submit": {
                "before": [],
                "after": [
                    "gh pr --browser --user {{options.submit}} --repo {{options.repo}} --number {{options.submittedPull}}"
                ]
            }
        },
        "repo": {
            "delete": {
                "before": [],
                "after": []
            },
            "new": {
                "before": [],
                "after": [
                    "gh re --browser --user {{options.loggedUser}} --repo {{options.new}}"
                ]
            }
        }
    },

    "open_issue_in_browser": true,

    "pull_branch_name_prefix": "pr/",

    "replace": {},

    "signature": "<br><br>:octocat: *Sent from [GH](http://nodegh.io).*"
}